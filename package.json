{
  "name": "ttrpg-lib-dice",
  "version": "1.0.0",
  "description": "A small library for rolling dice in tabletop games",
  "keywords": [
    "typescript",
    "npm",
    "library",
    "random",
    "diceroller",
    "dices",
    "rpg",
    "ttrpg"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "tsc",
