    "lint": "yarn eslint src/",
    "test": "jest src/",
    "test:coverage": "jest src/ --collectCoverage"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.3.2",
    "typescript": "^5.5.3"
  }
}
